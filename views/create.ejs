<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">Add New Car</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/car/add" method="post" id="add-form">
                        <div class="mb-3">
                            <label for="marka">Marka</label>
                            <input type="text" name="marka" class="form-control form-control-lg" placeholder="Opel" required>
                        </div>
                        <div class="mb-3">
                            <label for="model">Model</label>
                            <input type="text" name="model" class="form-control form-control-lg" placeholder="G432" required>
                        </div>
                        <div class="mb-3">
                            <label for="VIN">VIN</label>
                            <input type="text" name="VIN" class="form-control form-control-lg" placeholder="DFJ435GF435345FDG" required>
                        </div>
                        <div class="mb-3">
                            <label for="regnum">Reg-num</label>
                            <input type="text" name="regnum" class="form-control form-control-lg" placeholder="NS-123GG" required>
                        </div>
                        <div class="mb-3">
                            <label for="created">Created</label>
                            <input type="date" name="created" class="form-control form-control-lg" required>
                        </div>
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" class="btn btn-primary btn-lg" value="Add Car">
                        </div>
                    </form>                    
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>