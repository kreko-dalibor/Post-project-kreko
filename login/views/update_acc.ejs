<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light">Edit Account: <%= account.username %></h3>
                </div>
                <div class="card-body p-4">
                    <form action="/update/acc/<%= account._id %>" method="post" id="add-form">
                        <div class="mb-3">
                            <label for="username">Username</label>
                            <input type="text" name="username" class="form-control form-control-lg" value="<%= account.username %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="password">Password</label>
                            <input type="text" name="password" class="form-control form-control-lg" value="<%= account.username %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="email">E-mail</label>
                            <input type="email" name="email" class="form-control form-control-lg" value="<%= account.email %>" required>
                        </div>
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" class="btn btn-primary btn-lg" value="Update Account">
                        </div>
                    </form>                    
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>